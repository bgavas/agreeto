{
  "name": "web-remix",
  "scripts": {
    "build": "run-p build:*",
    "build:app": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server/index.ts --outfile=./build/server.js",
    "clean": "rimraf ./.cache/ ./build/ ./public/build/",
    "dev": "run-p dev:*",
    "dev:app": "remix watch",
    "dev:server": "cross-env NODE_ENV=development npm run build:server && dotenv cross-env NODE_ENV=development concurrently 'npm run build:server -- --watch' 'npm run start:server'",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "cross-env NODE_ENV=production npm run start:server ",
    "start:server": "node ./build/server.js",
    "types:check": "tsc"
  },
  "dependencies": {
    "@azure/msal-node": "^1.9.0",
    "@microsoft/microsoft-graph-client": "^3.0.2",
    "@remix-run/express": "^1.5.1",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "googleapis": "^100.0.0",
    "isomorphic-fetch": "^3.0.0",
    "morgan": "^1.10.0",
    "office-addin-dev-certs": "^1.7.10",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "concurrently": "^7.2.0",
    "dotenv-cli": "^5.1.0",
    "esbuild": "^0.14.39",
    "eslint": "^8.16.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4"
  }
}
